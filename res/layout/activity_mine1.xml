<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    	xmlns:android="http://schemas.android.com/apk/res/android"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >  
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:gravity="left"
    android:orientation="vertical" >
        
<RelativeLayout
    android:id="@+id/settouxiang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/relativelayout_select_style"
    android:clickable="true" >

    <ImageView
        android:id="@+id/touxiangsuccess"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/mine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="头像"
        android:textColor="#282828"
        android:textSize="17dip" />

</RelativeLayout>

        <RelativeLayout
            android:id="@+id/setnickname"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:textColor="#282828"
                android:text="昵称"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changenickname"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="8dp"
              android:gravity="center_vertical|center_horizontal"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
        
        <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#E5E5E5"/>
        
        <RelativeLayout
            android:id="@+id/setsex"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:textColor="#282828"
                android:text="性别"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changesex"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical|center_horizontal"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
        <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#E5E5E5"/>

 <RelativeLayout
     android:id="@+id/setage"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:background="@drawable/relativelayout_select_style"
     android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:textColor="#282828"
                android:text="年龄段"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changeage"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical|center_horizontal"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
		<View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#E5E5E5"/>

        <RelativeLayout
            android:id="@+id/setcity"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:textColor="#282828"
                android:text="关注城市"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changecity"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical|center_horizontal"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
        <RelativeLayout
            android:id="@+id/setphone"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" 
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:text="绑定手机"
                android:textColor="#282828"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changephone"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical|center_horizontal"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
        <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#E5E5E5"/>

       <RelativeLayout
            android:id="@+id/setinterest"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" 
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/ttd"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:text="兴趣标签"
                android:textColor="#282828"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/changinterest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="11dp"
              android:layout_toRightOf="@+id/ttd"
              android:gravity="right|center_vertical"
              android:singleLine="false"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>
		<View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#E5E5E5"/>
		
		<RelativeLayout
            android:id="@+id/sethomes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/relativelayout_select_style"
            android:orientation="horizontal" 
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/wregion"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:text="关注区域"
                android:textColor="#282828"
                android:textSize="17sp" />

          <TextView
              android:id="@+id/watchregion"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="11dp"
              android:layout_toRightOf="@+id/wregion"
              android:gravity="right|center_vertical"
              android:singleLine="false"
              android:textColor="#737373"
              android:textSize="17sp" />

		</RelativeLayout>

    </LinearLayout>
</LinearLayout>  
</ScrollView>