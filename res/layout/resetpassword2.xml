<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"

        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="1.输入手机号"
            android:textColor="#030303"
            android:textSize="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="2.设置新密码"
            android:textColor="#030303"
            android:textSize="16dp" />

    </LinearLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="#333333" />
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="请输入6~32位密码"
            android:textColor="#333355"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>
        
        <EditText
            android:id="@+id/repassword_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
          	android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="请再次输入"
            android:textColor="#333355"
            android:inputType="textPassword" >
        </EditText>
        <EditText
            android:id="@+id/verifyText_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:textColor="#333355" >
        </EditText>

    </LinearLayout>
    
    
    <Button
        android:id="@+id/verify_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_select_list_style"
        android:text="重置密码"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</LinearLayout>